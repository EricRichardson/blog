<h2><%= @post.title %></h2>
<div class="post-body">
  <%= "Created br: " + @post.user.full_name if @post.user %><br>
  <%= @post.body %>
</div>
<% if can? :manage, @post %>
  <%= link_to "Edit", edit_post_path(@post) %>
  <%= link_to "Delete", post_path(@post), method: :delete,
                                        data: {confirm: "Are you sure you want to delete this post?"} %>
<% end %>
<% if user_signed_in? %>
  <h3>Leave a Comment</h3>
  <%= form_for [@post, @comment] do |f| %>
    <%= f.text_area :body %>
    <%= f.submit "Post Comment" %>
  <% end %>
<% end %>
<h3>Comments</h3>
<% @comments.each do |com| %>
<%= com.user.full_name + " says:" if com.user %><br>
<%= com.body %>
<% if (can? :manage, com) || (can? :manage, @post) %>
  <%= link_to "Edit", edit_post_comment_path(@post, com) %>
  <%= link_to "Delete",post_comment_path(@post,com), method: :delete,
                                              data: {confirm: "Are you sure you want to delete this comment"} %>
<% end %>
  <hr>

<% end %>
