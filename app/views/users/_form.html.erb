<%= form_for @user do |f| %>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <% if user_signed_in? %>
    <%= link_to "Change password", change_password_path %>
  <% else %>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
  <% end %>
  <% edit_message = "Update info" if user_signed_in? %>
  <%= f.submit edit_message ||"Make Account" %>
  <%= link_to "Forgot password?", new_password_reset_path %>
<% end %>
